generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Reservation {
  id_reservation   Int      @id @default(autoincrement())
  type_chambre     String
  reservation_date DateTime
  arr_date         DateTime
  dep_date         DateTime
  nb_personnes     Int
  date_creation    DateTime @default(now())
}
